---
import {getCollection, render} from 'astro:content';
// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
    const project = await getCollection('project');
    return project.map(post => ({
        params: {id: post.id},
        props: {post},
    }));
}
// 2. For your template, you can get the entry directly from the prop
const {post: project} = Astro.props;
const {Content} = await render(project);

import Main from "@/layouts/main.astro";
import {Button} from "@/components/ui/button";
import {ArrowLeftIcon, FolderGit2Icon} from "lucide-vue-next";
---
<Main title={project.data.slug}>
    <div class="flex justify-between">
        <Button variant="outline" class="m-5">
            <ArrowLeftIcon/>
            <a href="../projects"> Back to project overview</a>
        </Button>
        <Button class="m-5">
            <FolderGit2Icon/>
            <a href={project.data.url} target="_blank"> View source on GitHub</a>
        </Button>
    </div>
    <div class="max-w-xl mx-auto mb-10">
        <Content/>
    </div>
</Main>